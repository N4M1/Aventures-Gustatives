{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Mon titre{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}

        <!-- Section posts -->
        <div class="w-1/3 m-auto mb-5">
            {% for article in articles|reverse %}
                <section class="my-5">
                    <div  class=" rounded overflow-hidden border w-full bg-white mx-3 md:mx-0 lg:mx-0">
                        <img style="background-color: #79a363" class="max-h-screen" src="{{ asset(article.imageFile)}}">
                        <div class="px-3 pb-2">
                            <div style="color: #79a363" class="pt-2">
                                <span class="text-sm  font-medium fa fa-user"> {{ article.idUser.pseudo }} •</span>
                                <span class="text-sm  font-medium"> Le {{ article.creationDate|date("m/d/Y") }} •</span>
                                <span class="text-sm  font-medium"> {{ article.categorie }}</span>
                            </div>
                            <div class="pt-1">
                                <div class="mb-2 text-sm">
                                    <h1 class="font-medium mr-2">{{ article.title }}</h1>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{ article.description}}</p>

                                    <a href="{{ path('app_recettes_details', {'id': article.id}) }}">
                                        <button class="w-full mt-2 bg-button-green py-2 text-white">Voir plus...</button>
                                    </a>
                                    <hr class="my-2">
                                </div>
                            </div>
                            <div class="text-xs mb-2 cursor-pointer font-medium fas fa-comment-alt fa fa-envelope"> {{ article.commentaires|length}} commentaires</div>
                        </div>
                    </div>
                </section>
            {% endfor %}
        </div>
    </div>

{% endblock %}