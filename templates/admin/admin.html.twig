{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Je suis Admin{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}


        <div class="rounded w-full bg-white mx-3 md:mx-0 lg:mx-0 mb-20">
            <h1 class="text-button-green font-light text-3xl text-center mb-9 mr-8">Administration</h1>

            <div class="flex justify-center mb-6 mr-8">
                <a href="{{ path('app_addarticle') }}" class="border-2 bg-button-green mr-4" style="padding: 8px 15px; color: white;" type="submit">Ajouter un article</a>
                <a class="border-2 bg-button-green" style="padding: 8px 10px; color: white" type="submit">Contact</a>
            </div>
            <div style="margin-right: 700px" class="w-1/3 m-auto">
            <table class="border-collapse border">
                <thead>
                <tr>
                    <th class=" border p-3">Id</th>
                    <th class="border pl-56 pr-56">Titre</th>
                    <th class="border">Catégorie</th>
                    <th class="border pl-20 pr-16">Actions</th>
                </tr>
                </thead>
                <tbody>
            {% for article in articles|reverse %}
                <form>
                    <tr class="border-collapse border">
                        <th class=" text-center border">{{ article.id }}</th>
                        <td class="pl-2 border">{{ article.title }}</td>
                        <td class="pl-2 border">{{ article.categorie }}</td>

                        <td class="border pt-3 pb-3 pl-4 pr-4">
                            <a style="background-color: #B2996B; color: white; padding: 7px" href="/update/{{ article.id }}">Modifier</a>
                            <a style="background-color: #d8363a; color: white; padding: 7px" href="/delete/{{ article.id }}">Supprimer</a>
                        </td>
                    </tr>
                </form>

            {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}